rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Explicitly allow users to read/write their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Temporarily allow full access to authenticated users to debug permission issues
    // We will tighten this after confirming access works
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
