rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access for images (URLs contain security tokens)
    // This allows Next.js Image component and browsers to load images
    match /{allPaths=**} {
      allow read: if true; // Public read - URLs contain tokens for security
      allow write: if request.auth != null; // Only authenticated users can upload
    }
  }
}

